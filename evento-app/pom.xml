<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>evento</artifactId>
        <groupId>evento</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>evento-app</artifactId>
    <packaging>ear</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>evento-app Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <dependencies>

        <dependency>
            <groupId>evento</groupId>
            <artifactId>evento-ejb</artifactId>
            <type>ejb</type>
        </dependency>

        <dependency>
            <groupId>evento</groupId>
            <artifactId>evento-war</artifactId>
            <type>war</type>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.7</version>

                <configuration>
                    <version>5</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>

                    <modules>
                        <ejbModule>
                            <groupId>evento</groupId>
                            <artifactId>evento-ejb</artifactId>
                        </ejbModule>

                        <webModule>
                            <groupId>evento</groupId>
                            <artifactId>evento-war</artifactId>
                            <contextRoot>/app</contextRoot>
                        </webModule>
                    </modules>

                </configuration>

            </plugin>

        </plugins>

    </build>

</project>
